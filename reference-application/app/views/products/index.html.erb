<% provide(:title, 'Products list') %>
<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Net price</th>
      <th>Vat rate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.net_price %></td>
        <td><%= product.vat_rate %></td>
        <td><%= link_to 'Show', product_path(product), class: 'btn btn-default' %></td>
        <td><%= link_to 'Edit', edit_product_path(product), class: 'btn btn-default' %></td>
        <td><%= link_to 'Destroy', product_path(product), class: 'btn btn-default', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path, class: 'btn btn-default' %>
